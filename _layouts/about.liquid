---
layout: default
---

<div class="max-w-[60ch]">
  <div class="flex
              max-[410px]:flex-col max-[410px]:place-items-center
              flex-row-reverse justify-center items-stretch min-h-28 mb-10 gap-x-6 gap-y-2">
    <img class="justify-right w-28 h-28 rounded-full overflow-hidden" src="{{ page.profile.image | prepend: 'assets/img/' }}" alt="Profile">
    <div class="flex flex-col">
      <header>
        <h1>
          {{ site.author.name }}
        </h1>
      </header>
      <div class="flex flex-row gap-2 text-4xl pt-4 max-[410px]:justify-center">
        <a class="hover:text-primary-accent squish-on-click" href="mailto:{{ site.author.email | encode_email }}">
          <i class="fa-solid fa-envelope"></i>
        </a>
        <a class="hover:text-primary-accent squish-on-click" href="https://github.com/{{ site.github_username }}">
          <i class="fa-brands fa-github"></i>
        </a>
        <a class="hover:text-primary-accent squish-on-click" href="https://www.linkedin.com/in/{{ site.linkedin_username }}">
          <i class="fa-brands fa-linkedin"></i>
        </a>
        <a class="hover:text-primary-accent squish-on-click" href="https://orcid.org/{{ site.orcid_id }}">
          <i class="ai ai-orcid"></i>
        </a>
        <a class="hover:text-primary-accent squish-on-click" href="https://scholar.google.com/citations?user={{ site.scholar_userid }}">
          <i class="ai ai-google-scholar"></i>
        </a>
      </div>
    </div>
  </div>

  <article>
    {{ content }}
  </article>

  <div class="flex place-items-center justify-center mt-8 gap-4
              *:overflow-hidden *:rounded-full *:bg-primary-dark *:px-5 *:py-2 *:text-white *:font-roboto">
    <a class="hover:bg-primary-accent squish-on-click" href="#">
      🚧 CV 🛠️
    </a>
    <a class="hover:bg-primary-accent squish-on-click" href="{{ page.transcript | prepend: 'assets/pdf/' }}">
      Transcript
    </a>
  </div>
</div>

<script>
  function waitBeforeNavigate(ev) {
    ev.preventDefault();
    const goTo = this.getAttribute("href");
    console.log(goTo);
    setTimeout(function(){window.location = goTo;}, 250);
  }

  document.querySelectorAll(".squish-on-click").forEach(EL => EL.addEventListener("click", waitBeforeNavigate));
</script>
