---
layout: default
---

<div class="max-w-[60ch] my-12 mx-8">
  <div class="flex
              max-[400px]:flex-col max-[400px]:place-items-center 
              flex-row-reverse justify-center items-stretch min-h-28 mb-10 gap-4">
    <img class="justify-right w-28 h-28 rounded-full overflow-hidden" src="{{ page.profile.image | prepend: 'assets/img/' }}" alt="Profile"> 
    <div class="flex flex-col">
      <header>
        <h1>
          {{ site.name }}
        </h1>
      </header>
      <div class="flex flex-row gap-2 text-4xl pt-4 *:ease-in-out *:duration-200  max-[400px]:justify-center">
        <a class="hover:text-primary-accent" href="https://github.com/{{ site.github_username }}" title="GitHub">
          <i class="fa-brands fa-github"></i>
        </a>
        <a class="hover:text-primary-accent" href="https://www.linkedin.com/in/{{ site.linkedin_username }}" title="LinkedIn">
          <i class="fa-brands fa-linkedin"></i>
        </a>
        <a class="hover:text-primary-accent" href="https://orcid.org/{{ site.orcid_id }}" title="ORCID">
          <i class="ai ai-orcid"></i>
        </a>
        <a class="hover:text-primary-accent" href="https://scholar.google.com/citations?user={{ site.scholar_userid }}" title="Google Scholar">
          <i class="ai ai-google-scholar"></i>
        </a>
      </div>
    </div>
  </div>

  <article>
    {{ content }}
  </article>

  <div class="flex place-items-center justify-center mt-8 gap-4">
    <button class="hover:bg-primary-accent relative overflow-hidden rounded-full bg-primary-dark px-5 py-2 text-white transition-all duration-300 [transition-timing-function:cubic-bezier(0.175,0.885,0.32,1.275)] active:-translate-y-1 active:scale-x-90 active:scale-y-110">
      CV
    </button>
    <button class="hover:bg-primary-accent relative overflow-hidden rounded-full bg-primary-dark px-5 py-2 text-white transition-all duration-300 [transition-timing-function:cubic-bezier(0.175,0.885,0.32,1.275)] active:-translate-y-1 active:scale-x-90 active:scale-y-110">
      Transcript
    </button>
  </div>
</div>